<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="sap.m.PrintPOC.controller.Screen4View">
	<App>
		<pages>
			<Page title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
			<footer>
				    <Bar class="sapContrast sapContrastPlus" id="bar0">
				        <contentMiddle>
				            <Button text="{i18n>printLabel}" width="100px" id="button0" type="Emphasized" press="printLabel"/>
				        </contentMiddle>
				    </Bar>
				</footer>
			<content>
				<Panel id="detail" backgroundDesign="Solid">
				    <DisplayListItem label="{i18n>ean}" value="{EAN}" id="lblEAN"/>
				    <DisplayListItem label="{i18n>styleInList}" value="{Style}" id="lblStyle"/>
				    <DisplayListItem label="" value="{Description}" id="lblDescription"/>
				    <DisplayListItem label="{i18n>season}" value="{Season}" id="lblSeason"/>
				    <DisplayListItem label="{i18n>division}" value="{Division}" id="lblDivision"/>
				    <DisplayListItem label="{i18n>color}" value="{Colour}" id="lblColor"/>
				    <DisplayListItem label="{i18n>size}" value="{Size}" id="lblSize"/>
				    <DisplayListItem label="{i18n>currency}" value="{Currency}" id="lblCurrency" visible="false"/>
				    <Bar>
				    	<contentRight>
				    		<Label xmlns="sap.m" text="{i18n>priceLbl}" width="100%" id="lblPrice"/>
				    		<Input xmlns="sap.m" width="50%" id="inputNumber" type="Number" textAlign="Right" value="{Netprice}"/>
				    	</contentRight>
				     </Bar>
			    
			    </Panel>
			</content>
			</Page>
		</pages>
	</App>
</mvc:View>